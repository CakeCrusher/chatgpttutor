{
  "name": "chatgpttutor",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "author": "Sebastian Sosa",
  "main": "dist/index.js",
  "module": "dist/chatgpttutor.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/chatgpttutor.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/chatgpttutor.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@tsconfig/recommended": "^1.0.2",
    "@types/dotenv": "^8.2.0",
    "dotenv": "^16.0.3",
    "dts-cli": "^2.0.2",
    "eslint": "^8.39.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "size-limit": "^8.2.4",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "openai": "^3.2.1"
  }
}
